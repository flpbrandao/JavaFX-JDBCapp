<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="145.0" prefWidth="239.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.SearchFormController">
   <children>
      <Label text="Search appointments">
         <font>
            <Font size="15.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="10.0" top="5.0" />
         </padding>
      </Label>
      <Label alignment="CENTER" text="Select appointment date: Default - today.">
         <VBox.margin>
            <Insets left="5.0" top="5.0" />
         </VBox.margin>
         <padding>
            <Insets left="5.0" />
         </padding></Label>
      <TextField fx:id="txtSearch" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#onBtSearchAction" prefHeight="30.0" prefWidth="138.0" promptText="dd/MM/yyyy">
         <VBox.margin>
            <Insets left="45.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <Button fx:id="btSearch" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onBtSearchAction" prefHeight="25.0" prefWidth="100.0" text="Search" textFill="#3914cdab">
         <VBox.margin>
            <Insets left="65.0" top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
